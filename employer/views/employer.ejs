<body>
    <div class="container">
     <div class="row">
        <div class="col-6">
        <h1 class="text-center">Company details</h1>
        <div class="col-6 offset-3">
            <form action="/home/employer" method="POST" novalidate class="validated-form">                <div class="mb-3">
                    <label class="form-label" for="CompanyN">Company Name</label>
                    <input class="form-control" type="text" id="CompanyN" name="company[name]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Company Location</label>
                    <input class="form-control" type="text" id="location" name="company[location]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="phone">Employee Phone no</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">91+</span>
                        <input type="text" class="form-control" id="phone"  aria-label="phone"
                            aria-describedby="phone-number" name="company[no]" required>
                            <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="job">Job available</label>
                    <input class="form-control" type="text" id="job" name="company[job]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="description">Job Description</label>
                    <textarea class="form-control" type="text" id="description" name="company[description]" required></textarea>
                </div>
                
            
           
        </div>
    </div>
     <!-- skills -->
